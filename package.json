{
  "name": "soundmakers_main",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run copy-polyfills && vite build",
    "copy-polyfills": "mkdir -p public/polyfills && cp node_modules/core-js-bundle/minified.js public/polyfills/core-js.min.js && cp node_modules/regenerator-runtime/runtime.js public/polyfills/regenerator-runtime.js",
    "preview": "vite preview",
    "serve": "npx sirv-cli dist --host"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@vitejs/plugin-legacy": "^7.2.1",
    "core-js": "^3.46.0",
    "core-js-bundle": "^3.46.0",
    "regenerator-runtime": "^0.14.1",
    "sirv-cli": "^3.0.1",
    "svelte": "^5.43.5",
    "vite": "^7.2.2"
  }
}
